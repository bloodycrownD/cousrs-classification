{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": [
      "es2020",
      "DOM"
    ],
    "esModuleInterop": true,
    "outDir": "out",
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "declaration": true,
    "sourceMap": true,
    "jsx": "preserve",
    "noImplicitAny": false,
  },
  "include": [
    "src"
  ],
  "ts-node": {
    "files": true
  },
  "exclude": ["node_modules"]
}
